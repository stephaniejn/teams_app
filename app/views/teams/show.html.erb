<div class="col-md-4 col-md-offset-4">
<div class = "box">
  <p>
    <h2><%= @team.title %></h2>
    <hr class="intro-divider">
    <br>
    </p>

  <p>
    <strong>Description:</strong>
    <%= @team.desc %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @team.loc %>
  </p>

  <p>
  Tags:
  <% @team.tags.each do |tag|%>
  <%= link_to tag.name, tagteam_path(tag.name) %>
  <% end %>
  </p>

  <br>
  <% list = flickr.photos.search :text => @team.loc + @team.title, :sort => "relevance"%>
  <% search = list.map do |photo|%>
  <% FlickRaw.url_b(photo) %>
  <% end %>
  <% photo = search.sample%>
  <img src="<%=photo%>">



  <br>
  <br>
   </div>
  </div>
</div>
</div>