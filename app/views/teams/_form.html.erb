<div class="container">
  <div class="row">
    <hr class="intro-divider">
    <div class="col-md-4 col-md-offset-4">
      <% if @team.errors.any? %>
      <div id="error_explanation">
        <div class = "alert alert-danger">
          <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>

          <ul>
            <% @team.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <% end %>
    </div>
  </div>

    <div class="form-group">
      <div class="row">
        <%=  bootstrap_form_for @team do |f| %>
        <div class="col-md-4 col-md-offset-4">
         <%= f.text_field :title, :placeholder => "Team Name"%>
         <%= f.text_field :desc, :placeholder => "Team Description", label: "Description" %>
         <%= f.text_field :loc, :placeholder => "Team Location", label: "Location" %>
       </div>
     </div>
     <div class="row">
       <div class="col-md-4 col-md-offset-4">
         <%= f.collection_check_boxes :tag_ids, @tags, :id, :name %>
         <%= f.submit :class=>'btn btn-primary', value:"Save Team"%>
       </div>
     </div>

     <% end %>

   </div>
 </div>